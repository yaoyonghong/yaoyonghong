$orange=#ED692B

body
  background-color #efefef
.header
  height 35px
  background-color #fff
  line-height 35px
  .icon-back
    position absolute
    display inline-block
    width 35px
    height 35px
    background url("../img/nav_back_icon@2x.png")
   .header-title
    display inline-block
    width 100%
    color #ED692B
    text-align center
.form-list
  width 100%
  height 80px
  .form-cell
    position relative
    display flex
    height 40px
    line-height 40px

    &-name
      display inline-block
      width 50px
      padding-left 40px

    .form-cell-name
      display inline-block
      width 50px
      padding-left 40px
      background url("")
      background-size 25% 50%
    .form-cell-input
     flex 1
    .form-cell-input2
     flex 2

    .form-cell-input
      flex 1
      border none
      outline none

    &:after
      content ''
      position absolute
      bottom -1px
      left 10px
      z-index 5
      display block
      height 1px
      width 100%
      background #efefef
    .fic-box
      display flex
    .input-box
      display block
      flex 1

    .bt_box
      display block
      width 100%
      height 40px
      border none
      border-radius 5px
      background-color #c7c7c7
      color #fff
      font-size 1.1rem
      line-height 40px
    .bt_reg
      padding-left 10px
      color $orange
      flex 1
    .bt-passwd
      padding-right 10px


