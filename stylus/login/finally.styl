.header
  position relative
  background url("../../img/2x.png") no-repeat center
  width 100%
  height 240px
  background-size 100%

  .header_top
    background url("../../img/3x.png") no-repeat center
    width 100%
    height 65px
    background-size 100%
  .header_left
    position absolute
    top 25px
    left 10px
    background url("../../img/4x.png") no-repeat center
    width 20px
    height 20px
    background-size 100%
  .header_number
    position absolute
    top 210px
    left 15px
    color #fff
    font-family '微软雅黑'
    .header_price
      color #ea5404
      font-family '微软雅黑'
      font-size 20px
    .header_month
      color #cccccc
      font-size 14px
  .number_right
    position absolute
    top 210px
    left 350px
    color #fff
    font-family '微软雅黑'
    .right_number
      font-size 18px
.footer_box
  width 100%
  height 500px
  background-color #121211
  background-size 100%
  display flex
  text-align center
  border-top 1px solid #cccccc

  .footer_cells
    flex 1
    color #f36c39
    font-family '微软雅黑'
    border 1px solid red
    height 30px
    margin-top 30px
  .footer_cell
    flex 1
    color #f36c39
    font-family '微软雅黑'
    border 1px solid red
    height 30px
    margin-top 30px





