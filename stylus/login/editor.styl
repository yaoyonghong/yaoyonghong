@import '../head.styl'
.info-cover
  width 100%
  height 100%
  background rgba(0,0,0,0.3)
  position absolute
  z-index 10
.footer-box
  width 100%
  height 55px
  background-color #fff
  margin-top 13px

  .icon_pic
    width 62px
    height 37px
    background-color #ff6700
    border-radius 20px
    margin-left 340px
    margin-top -10px
    .icon_text
      width 35px
      height 35px
      background-color #fff
      border-radius 50%
      box-shadow 0 3px 3px #666

  .footer-title
    position relative
    top 15px
    left 10px
    color #494949
    font-family '微软雅黑'
  .footer-number
    position relative
    left 60%
    top 17px
    color #c7c7c7
    font-family '微软雅黑'
  .icon
    background url("../../img/content_list_right_icon@2x.png") no-repeat center
    width 20px
    height 36px
    background-size 45%
    position relative
    left 93%
    top -10px
.footer
  position relative
  height 55px
  background-color #fff
  margin-top 25px
  .footer_text
    position absolute
    left 180px
    top 19px
    color #494949
    font-family '微软雅黑'

.box
  position relative
  width 300px
  height 120px
  background #fff
  border-radius 15px
  margin-top 40px
  margin-left 60px
  z-index 30
  .box-title
    position absolute
    top 25%
    left 60px
    color #3c3c3c
    font-family '微软雅黑'
  .div
    width 100%
    height 1px
    background  #ccc
    position absolute
    top 60%
  .box_left
    position absolute
    top 70%
    left 42px
    color #666
    font-family '微软雅黑'
    font-size 20px



  .box-text
    position absolute
    top 70%
    left 200px
    color #eb642b
    font-family '微软雅黑'
    font-size 20px

