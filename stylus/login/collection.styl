@import'../head.styl'
.box_title
  background-color #fff
  padding 15px
  margin-top 10px
  display flex
  .text_left
    color #f36c39
    font-family '微软雅黑'
    margin-left 50px
    flex 1
  .text_right
    color #323232
    font-family '微软雅黑'
    margin-left 50px
    flex 1
.block_box
  padding 20px
  background-color #fff
  display flex
  line-height 30px
  margin-top 15px
  .img_box
    flex 2
    background url("../../img/content_img_list@2x.png") no-repeat center

  .info_box
    flex 3
    margin-left 20px

  .info_title
    font-size 20px
    font-family '微软雅黑'
    color #323232
  .info_pic
    background url("../../img/collect_icon_press@2x.png") no-repeat right
    height 30px
    width 30px
    background-size 60%
    margin-left 170px
    margin-top -30px

  .info_address
    font-size 16px
    font-family '微软雅黑'
    color #686565
  .info-tag_box
    border 1px solid #ea5404
    border-radius 5px
    width 70px
    height 25px
  .tag_text
    color #ea5404
  .price
    color #ea5404
    font-family '微软雅黑'
  .info_day
    color #727272
    font-size 14px
    font-family '微软雅黑'
  .info_footer
    color #727272
    font-size 14px
    font-family '微软雅黑'
    margin-left 16px