@import '../head.styl'
.info_cover
  width 100%
  height 100%
  background rgba(0,0,0,0.3)
  position absolute
  z-index 10
.editor
  color #c7c7c7
  font-family '微软雅黑'
  margin-left 15px
  margin-top 10px
.editor_phone
  height 55px
  background-color #fff
  margin-top 10px
  display flex
  .editor_pic
    width 50px
    height 50px
    background url("../../img/content_img_user@2x.png") no-repeat center
    background-size 85%
  .phone
    flex 1
    background url("../../img/content_icon_call@2x.png") no-repeat right
    background-size 10%
    margin-right 15px
    &:before
      content ''
      width 1px
      height 30px
      background-color #ccc
      position absolute
      left 350px
      top 118px
  .editor_text
    color #666
    font-family '微软雅黑'
    margin-top 10px
    .editor_text1
      font-size 13px
      color #828080
.message
  color #c7c7c7
  font-family '微软雅黑'
  margin-left 15px
  margin-top 10px
.floor_box
  height 65px
  background-color #fff
  margin-top 10px
  display flex
  position relative
  .floor_text
    color #3c3c3c
    font-family  '微软雅黑'
    line-height 20px
    margin-left 10px
    margin-top 5px
    .text_middle
      color #666
      font-size 13px
    .text_right
      color #c0c0c0
      font-size 13px
      font-family  '微软雅黑'
      flex 1
      text-align center
      position absolute
      left 55%
      top 15px
.text_box
  color #c7c7c7
  font-family '微软雅黑'
  margin-left 15px
  margin-top 10px
.number_box
  height 50px
  background-color #fff
  margin-top 10px
  .number
    color #3c3c3c
    font-family  '微软雅黑'
    font-size 17px
    padding-top 15px
    margin-left 5px

.bottom_box
  height 100px
  background-color #fff
  margin-top 10px
  position relative


.footer_box
  width 95%
  height 45px
  border-radius 5px
  background-color #f36b38
  margin 0 auto
  margin-top 50px
  .footer_text
    color #fff
    text-align center
    font-family '微软雅黑'
    font-size 20px
    padding-top 10px

.box-
  position relative
  width 300px
  height 120px
  background #fff
  border-radius 15px
  margin-top -150px
  margin-left 60px
  display flex
  z-index 40
  .box-title-
    position absolute
    top 25%
    left 100px
    color #3c3c3c
    font-family '微软雅黑'
    font-size 15px
  .div-
    width 100%
    height 1px
    background  #ccc
    position absolute
    top 60%
  .box-text-
    position absolute
    top 70%
    color #eb642b
    font-family '微软雅黑'
    font-size 16px
    left 175px
  .text_left-
    position absolute
    top 70%
    left 60px
    color #666
    font-family '微软雅黑'
    font-size 16px