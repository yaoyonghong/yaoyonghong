body
  background #efefef

.header_box
  height 65px
  background-color #fff
  display flex
  .header_left
    flex 1
    color #666
    font-family '微软雅黑'
    height 30px
    margin-top 30px
    text-align left
    margin-left 10px
  .header_title
    font-size 20px
    font-family '微软雅黑'
    margin-top 25px
  .header_right
    flex 1
    color #f36c39
    font-family '微软雅黑'
    height 30px
    margin-top 30px
    text-align right
    margin-right 10px
.text
  color #c7c7c7
  font-size 13px
  text-align center
  margin-top 80px
.footer_box
  width 280px
  height 190px
  background-color #878787
  margin 0 auto
  border-radius 5px
  margin-top 10px
  .footer_pic
    width 60px
    height 60px
    background url("../../img/content_icon_plus@2x.png") no-repeat center
    background-size 70%
    margin 0 auto
    padding-top 130px
  .footer_text
    color #fff
    font-family '微软雅黑'
    text-align center
    margin-top -70px


