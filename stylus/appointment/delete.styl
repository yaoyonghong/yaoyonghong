@import'../head.styl'
.header_box
  height 65px
  background-color #fff
  display flex
  .header_left
    flex 1
    color #666
    font-family '微软雅黑'
    height 30px
    margin-top 30px
    text-align left
    margin-left 10px
  .header_title
    font-size 20px
    font-family '微软雅黑'
    margin-top 25px
  .header_right
    flex 1
    color #f36c39
    font-family '微软雅黑'
    height 30px
    margin-top 30px
    text-align right
    margin-right 10px
.editor
  color #c7c7c7
  font-family '微软雅黑'
  margin-left 15px
  margin-top 10px
.editor_phone
  height 55px
  background-color #fff
  margin-top 10px
  display flex
  .editor_pic
    width 50px
    height 50px
    background url("../../img/content_img_user@2x.png") no-repeat center
    background-size 85%
  .phone
    flex 1
    background url("../../img/content_icon_call@2x.png") no-repeat right
    background-size 10%
    margin-right 15px
    &:before
      content ''
      width 1px
      height 30px
      background-color #ccc
      position absolute
      left 350px
      top 118px
  .editor_text
    color #666
    font-family '微软雅黑'
    margin-top 10px
    .editor_text1
      font-size 13px
      color #828080
.message
  color #c7c7c7
  font-family '微软雅黑'
  margin-left 15px
  margin-top 10px
.floor_box
  height 65px
  background-color #fff
  margin-top 10px
  display flex
  position relative
  .floor_text
    color #3c3c3c
    font-family  '微软雅黑'
    line-height 20px
    margin-left 10px
    margin-top 5px
    .text_middle
      color #666
      font-size 13px
    .text_right
      color #c0c0c0
      font-size 13px
      font-family  '微软雅黑'
      flex 1
      text-align center
      position absolute
      left 55%
      top 15px
.text_box
  color #c7c7c7
  font-family '微软雅黑'
  margin-left 15px
  margin-top 10px
.number_box
  height 50px
  background-color #fff
  margin-top 10px
  .number
    color #3c3c3c
    font-family  '微软雅黑'
    font-size 17px
    padding-top 15px
    margin-left 5px
.bottom_box
  height 100px
  background-color #fff
  margin-top 10px
  position relative
.info_title
  color #c7c7c7
  font-family '微软雅黑'
  margin-left 15px
  margin-top 10px
.weekday_box
  height 45px
  background-color #fff
  margin-top 10px
  display flex
  .weekday_text
    color #666
    font-family '微软雅黑'
    flex 1
    font-size 14px
    text-align left
    margin-left 10px
    margin-top 7px
  .weekday_right
    color #666
    font-family '微软雅黑'
    flex 1
    text-align right
    font-size 14px
    margin-right 10px
    margin-top 12px
.change_text
  color #c7c7c7
  font-family '微软雅黑'
  margin-left 15px
  margin-top 10px
.footer_box
  height 45px
  background-color #fff
  margin-top 10px
  display flex
  .footer_number
    color #c7c7c7
    font-family '微软雅黑'
    flex 1
    text-align right
    margin-top 15px
    margin-right 10px

