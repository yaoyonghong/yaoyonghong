body
  background #b2b2b2
.box
  position relative
  width 300px
  height 120px
  background #fff
  border-radius 15px
  margin-top 300px
  margin-left 60px
  display flex
  .box-title
    position absolute
    top 25%
    left 800px
    color #3c3c3c
    font-family '微软雅黑'
    font-size 15px
  .div
    width 100%
    height 1px
    background  #ccc
    position absolute
    top 60%
  .box-text
    position absolute
    top 70%
    color #eb642b
    font-family '微软雅黑'
    font-size 16px
    left 175px
  .text_left
    position absolute
    top 70%
    left 60px
    color #666
    font-family '微软雅黑'
    font-size 16px
