@import'../head.styl'
.info_box
  padding 20px 15px
  background-color #fff

.info_img
  background url("../../img/03.png") no-repeat center
  width 135px
  height 135px
  margin 0 auto
  border-radius 50%
.info_name
  text-align center
  line-height 50px
  font-size 1.2rem
  font-family '微软雅黑'

.info_desc
  text-align center
  line-height 35px
  color:#999
  font-family '微软雅黑'
.info_edit
  padding 1px 5px
  border 1px solid #ffa66b
  line-height 50px
  color #ea5404
  text-align center
  width 180px
  height 53px
  margin 0 auto
  border-radius 5px
  font-size 20px
  font-family '微软雅黑'

.info-cells
  background-color #fff
  margin-top 11px
.info-cell
  padding 0 15px
  display flex
  line-height 40px
  border-bottom 1px solid #e1e1e1
  color #646464
  font-family '微软雅黑'
.info-name
  flex 3
  font-size 20px
  font-family '微软雅黑'

.info-content
  flex 4
  text-indent 10px

.image-cell
  display flex
  margin-top 23px

.image-block
  flex 1
  margin 0 11px
  text-align center
  font-size 16px
  color #878787
  font-family '微软雅黑'

.image-block div
  width 100px
  height 65px
  margin 0 auto
  border-radius 5px
  background #878787
